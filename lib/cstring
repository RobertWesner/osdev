#include <cstddef>

#ifndef _cstring_
#define _cstring_

void memcpy(void* destination, const void* source, size_t num)
{
    for (size_t i = 0; i < num; i++) {
        ((unsigned char*)destination)[i] = ((unsigned char*)source)[i];
    }
}

